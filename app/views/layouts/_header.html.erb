<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t('logo'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('header.home'), root_path %></li>
        <li><%= link_to t('help_page'), help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t('header.users'), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('header.account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('profile'), current_user %></li>
              <li><%= link_to t('header.setting'), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('header.logout'), destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('login'), user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
