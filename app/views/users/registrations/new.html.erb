<% provide(:title, t('signup')) %>
<h1><%= t('signup') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: user_registration_path(resource)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('minimum_password') %>)</em>
      <% end %>
      <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>

      <%= f.label :password_confirmation, t('confirmation') %>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>

      <div class="'actions'">
        <%= f.submit t('signup'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
