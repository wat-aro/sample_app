<% provide(:title, t('password_forgot.title')) %>
<h1><%= t('password_forgot.title') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                 html: {method: :post }) do |f| %>
      <%= f.label t('email.address') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit t('password_forgot.submit'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
